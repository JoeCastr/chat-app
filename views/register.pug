doctype html

head
  title Register
  style
      include ../public/stylesheets/app.css

  header
    h1 Register a Username
    form(action="/register" method="post")
      dt
        label(for="username" class="username-label") Create Username:
      dd
        input(type="text" class="input" id="username" name="username")
      dt
        label(for="password" class="password-label") Create Password:
      dd
        input(type="password" class="input" id="password" name="password")

      input.button(type="submit" class="button" value="Create User")
    a(href='/signin') Login Page